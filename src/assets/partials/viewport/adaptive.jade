script
  :coffee
    do ->
      if (navigator.userAgent.match(/iPhone|iPod|Android/i))
        document.documentElement.className += ' ua--sp'
      else
        document.documentElement.className += ' ua--pc'
script
  :coffee
    do ->
      meta = document.createElement("meta")
      meta.setAttribute("name", "viewport")
      if (navigator.userAgent.match(/iPad/i))
        meta.setAttribute("content", "width=1024, initial-scale=1.0")
      else
        meta.setAttribute("content", "width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no")
      document.getElementsByTagName("head")[0].appendChild(meta)
